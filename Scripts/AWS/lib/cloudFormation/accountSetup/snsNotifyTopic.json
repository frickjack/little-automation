{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Setup SNS topic for notification, and register a simple e-mail subscriber",
    "Parameters" : {
        "email": {
          "Description" : "e-mail address to receive notifications",
          "Type": "String",
          "ConstraintDescription" : "must be an e-mail address"
        }
    }, 
    "Resources": {
        "SnsTopic": {
            "Type": "AWS::SNS::Topic",
            "Properties": {
                "Subscription": [
                    {
                        "Endpoint": { "Ref" : "email" },
                        "Protocol": "email"
                    }
                ],
                "TopicName": "littleNotify"
            }
        },
        "SnsTopicPolicy": {
            "Type": "AWS::SNS::TopicPolicy",
            "Properties": {
                "PolicyDocument": {
                    "Statement": [
                        {
                            "Sid": "TrustCWEToPublishEventsToMyTopic",
                            "Effect": "Allow",
                            "Principal": {
                                "Service": "events.amazonaws.com"
                            },
                            "Action": "sns:Publish",
                            "Resource": {
                                "Ref": "SnsTopic"
                            }
                        }
                    ]
                },
                "Topics": [
                    {
                        "Ref": "SnsTopic"
                    }
                ]
            }
        }
    },
    "Metadata": {},
    "Conditions": {}
}
